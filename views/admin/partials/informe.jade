div.informes_portal
  h1.page_title Informe
  div.acciones
    div.informe_individual
      h2 Informe individual
      table
        thead
          th.hpad 
            label Nombres       
          th.hpad 
            label Apellidos 
          th.hpad
            label Cedula     
        tbody
          td.hpad
            {{root.postulado_informe.nombres}}
          td.hpad
            {{root.postulado_informe.apellidos}}
          td.hpad
            {{root.postulado_informe.cedula}}

      br
    
      div#diagram_wrapper(ng-controller="DiagramCtrl")

    
      div.individual_scores(ng-repeat="obj in root.diagram_json.children")
        b 
          {{ obj.name }}
        table.object_table
          thead
            tr.row
              th Tipo
              th Cantidad            
          tbody            
            tr(ng-show="obj.children == null")
              td.object_row_odd(colspan="4") No hay casos de este tipo!

            tr.row(ng-repeat="child in obj.children"  ng-class-odd="'object_row_odd'" ng-class-even="'object_row_even'")
              td
                {{ child.name }}
              td
                {{ child.size }}
