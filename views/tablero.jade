html(ng-app="jusypazApp" manifest="/cache.manifest" type="text/cache-manifest")
  head
    link(rel='stylesheet', href='/css/main.css') 
    link(href="/css/bootstrap.min.css" rel="stylesheet")
    //- link(href='http://fonts.googleapis.com/css?family=Open+Sans:400,700' rel='stylesheet' type='text/css')
    //- link(href="//netdna.bootstrapcdn.com/bootstrap/3.0.1/css/bootstrap.min.css" rel="stylesheet")
    script(src='/js/angular.min.js')
    script(src='/js/angular-route.min.js')
    script(src='/js/angular-animate.min.js')
    script(src='/js/angular-animate.min.js')
    script(src="/js/angular-resource.min.js")
    //script(src="/js/ui-bootstrap-0.6.0.min.js")
    script(src="/js/ui-bootstrap-tpls-0.6.0.min.js")
    script(src='/js/app.js')
    script(src='/js/ad_ctrl.js')
    script(src='/js/postulado_ctrl.js')
    script(src='/js/inline.js')
    script(src='/js/mask.js')
    script(src='/js/file_upload.js')
    script(src='/js/upload.js')
    script(src='/js/d3.v3.min.js')

    title SIAR - Tablero de inicio

  body
    div.navigation_header.centered
      img.header_logo(src="/img/siar_small.png")

      div.inline.cedula_input_div(ng-controller="ConsultaCtrl") 
        p.inline.title_bar Buscar postulado:
        input.cedula_input(ng-model="cedula" required on-enter="consulta_cedula()")

      div.inline.ping(ng-controller="PingCtrl")
        div.inline.connection_ok(ng-show="connection")
        div.inline.no_connection(ng-hide="connection")
      
      div.header_actions.inline(ng-controller="MenuCtrl")
        div.menu_wrapper.inline
          ul.header_menu.inline
              li.header_menu_item(ng-mouseleave="hide_menu()" ng-mouseover="animate_menu()")
                img.inline(width="24" src="/img/conf.png")
                ul.header_submenu(ng-show="show_submenu")
                  li.header_submenu_item(ng-click="admin_home()") Menu principal 
                  li.header_submenu_item(ng-click="admin_postulados()")  Administración Postulados
                  li.header_submenu_item(ng-click="admin_users()") Administración Usuarios 
                  li.header_submenu_item(ng-click="informes()") Informes
                  li.header_submenu_item(ng-click="config()") Configuraciones 
                  li.header_submenu_item(ng-click="logout()") Salir 

    
    div.root(ng-controller="RootCtrl")
      div.messages
        div.notification(ng-show="root.notification" ng-animate="'animate'")
          {{ root.notification }}
        div.error_message(ng-show="root.error" ng-animate="'animate'")
          {{ root.error }}
        div.message_notification(ng-click="show_messages()" ng-show="root.new_messages")
          {{ root.new_messages }}

      div.page_wrapper
        div(ng-view)

    
