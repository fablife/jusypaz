html(ng-app="jusypazNormalApp" manifest="/cache.manifest" type="text/cache-manifest")
  head
    link(rel='stylesheet', href='/css/main.css') 
    link(href="/css/bootstrap.min.css" rel="stylesheet")
    script(src='/js/angular.min.js')
    script(src='/js/angular-route.min.js')
    script(src='/js/angular-animate.min.js')
    script(src="/js/angular-resource.min.js")
    script(src="/js/ui-bootstrap-tpls-0.6.0.min.js")
    script(src='/js/normalApp.js')
    script(src='/js/postulado_ctrl_normal.js')
    script(src='/js/inline_normal.js')
    script(src='/js/file_upload.js')
    script(src='/js/d3.v3.min.js')

    title jusypaz - PÃ¡gina de inicio

  body
    div.navigation_header.centered
      img.header_logo(src="/img/siar_small.png")      
      
      div.header_actions.inline(ng-controller="MenuCtrl")
        div.menu_wrapper.inline
          ul.header_menu.inline
              li.header_menu_item(ng-mouseleave="hide_menu()" ng-mouseover="animate_menu()")
                img.inline(width="24" src="/img/conf.png")
                ul.header_submenu(ng-show="show_submenu")
                  li.header_submenu_item(ng-click="config()") Configuraciones 
                  li.header_submenu_item(ng-click="message()") Deja un mensaje
                  li.header_submenu_item(ng-click="logout()") Logout 

    div.root(ng-controller="RootCtrl")
      div.messages
        div.notification(ng-show="root.notification" ng-animate="'animate'")
          {{ root.notification }}
        div.error_message(ng-show="root.error" ng-animate="'animate'")
          {{ root.error }} 

      div.page_wrapper
        div(ng-view)

    
